<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteAppMVVM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- در نهایت به تم اصلی اپلیکین وارد میکنیم استایلی که برای باتم شیت ساختیم را -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <!-- باتم شیتی که راحی کردیم را تزریق میکنم به تم خودم -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <!-- استایل کلی که طراحی کردیم را میدیم به باتم شیت متریال کامپننت -->
    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <!-- کلمه overlay یعنی این چیزی که داری را بیا روی اون حالت اصلیت قرار بده و حالت دیفالت خودش را میبره -->
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <!--استایل کلی -->
    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <!-- rounded : دایره ای | cut : یهو میبره -->
        <item name="cornerFamily">rounded</item>
        <!-- کرنرها را میشه هم جدا جدا داد هم یک باره ولی ما برای پایین خب نمیخوایم -->
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>


    <!--ـــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــ-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="BottomRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">70dp</item>
        <item name="cornerSizeBottomRight">70dp</item>
    </style>

    <style name="TopRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

</resources>